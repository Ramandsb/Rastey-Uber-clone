<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:elevation="30dp">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:layout_margin="10dp"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#453454">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cab_no"
                android:id="@+id/mcab_no"
                android:textColor="#ffffff"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/mto_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:id="@+id/mtime"
                android:textColor="#ffffff"
                android:layout_above="@+id/mto_location"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="57dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to_location"
                android:id="@+id/mto_location"
                android:layout_marginTop="52dp"
                android:textColor="#ffffff"
                android:layout_below="@+id/mcab_no"
                android:layout_alignParentStart="true"
                android:layout_marginStart="52dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick"
                android:id="@+id/mpick"
                android:textColor="#ffffff"
                android:layout_alignTop="@+id/mto_location"
                android:layout_alignStart="@+id/mtime" />
            <Button
                android:id="@+id/click"
                android:text="c"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>



