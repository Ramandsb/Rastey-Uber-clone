<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.koko.koko.WakeUpAct"
    android:background="@drawable/background0">



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Reject"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="#FF0011"
        android:elevation="20dp"
        app:borderWidth="0dp"
        android:src="@drawable/close"
        android:layout_gravity="bottom|end"
        android:focusableInTouchMode="true"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/Accept"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Accept"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="#21D130"
        android:elevation="20dp"
        app:borderWidth="0dp"
        android:src="@drawable/check"
        android:focusableInTouchMode="true"
        android:layout_marginRight="50dp"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="71dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/cab_no"
        android:textColor="#ffffff"
        android:layout_marginTop="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/time"
        android:textColor="#ffffff"
        android:layout_above="@+id/to"
        android:layout_alignStart="@+id/to" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/to"
        android:textColor="#ffffff"
        android:layout_above="@+id/from"
        android:layout_alignStart="@+id/from" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#ffffff"
        android:id="@+id/from"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Accept" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Accept"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/Accept" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reject"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Reject"
        android:layout_alignEnd="@+id/Reject" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cab Number :"
        android:id="@+id/textView6"
        android:textColor="#eeeeee"
        android:layout_alignTop="@+id/cab_no"
        android:layout_toStartOf="@+id/time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From :"
        android:id="@+id/textView7"
        android:textColor="#eeeeee"
        android:layout_alignBaseline="@+id/from"
        android:layout_alignBottom="@+id/from"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To :"
        android:id="@+id/textView8"
        android:textColor="#eeeeee"
        android:layout_above="@+id/from"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView9"
        android:textColor="#eeeeee"
        android:layout_above="@+id/to"
        android:layout_alignEnd="@+id/Reject" />

</RelativeLayout>
